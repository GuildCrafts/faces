doctype html
html
  head
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/6.0.0/normalize.min.css")
    link(rel="stylesheet" href="/style.css")
  body
    h1 Learners Guild Faces
    .controls
      select(name="sortby")
        option(checked) Name ASC
        option Name DESC
      input(type="text" name="filter" value="" placeholder="filter")

    .players
      for player in players
        .player(data-player=JSON.stringify(player))
          .player-details
            .player-name= player.name
            .player-handle= player.handle
          a.player-avatar(href="https://game.learnersguild.org/users/"+player.handle)
            img(src=player.avatarUrl)
    script(src="/script.js")
